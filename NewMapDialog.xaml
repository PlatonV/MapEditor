<Window x:Class="MapEditor.NewMapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapEditor"
        mc:Ignorable="d"
        Title="New Map" Height="180" Width="250" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20px" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="tb_Width" Width="25"></TextBox>
                <Label> - Enter width cells</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="tb_Height" Width="25"></TextBox>
                <Label> - Enter height cells</Label>
            </StackPanel>
            <Button Margin="5px" Width="70" Click="Button_Click">Create</Button>
        </StackPanel>
    </Grid>
</Window>
